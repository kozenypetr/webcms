
<div id="modal-form-box" class="modal-document-add pure-form pure-form-stacked">
    {{ form_start(form, {'attr': {'action': action, 'id': 'modal-edit-form', 'novalidate': 'novalidate' }}) }}
        {#
        <div class="col-md-4 col-md-push-8">
            <h4>Zobrazení</h4>
            {{ form_row(form.status) }}

            <h4>Informace o stránce</h4>
            <p>Vytvořeno: {{ document.created | date('d.m.Y H:i:s') }}</p>

        </div>
        #}
        {#<div class="col-md-8 col-md-pull-4">#}
        <div id="tabs">
            <ul>
                <li><a href="#tabs-1">Základní informace</a></li>
                <li><a href="#tabs-2">Zobrazení</a></li>
                <li><a href="#tabs-3">SEO</a></li>
            </ul>


            <div id="tabs-1" class="tab">
                <div class="pure-g">
                    <div class="pure-u-1-2">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="pure-u-1-2">
                        {{ form_row(form.status) }}
                    </div>
                    <div class="pure-u-1-2">
                        {{ form_row(form.url) }}
                    </div>
                    <div class="pure-u-1-2">
                        {{ form_row(form.parent) }}
                    </div>
                    <div class="pure-u-1-2">
                        {{ form_row(form.category) }}
                    </div>
                    <div class="pure-u-1-2">
                        {{ form_row(form.template) }}
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
            <div id="tabs-3" class="tab">
                <div class="pure-g">
                    <div class="pure-u-1-2">
                        {{ form_row(form.metatitle) }}
                    </div>
                    <div class="pure-u-1-2">
                        {{ form_row(form.metakeywords) }}
                    </div>
                    <div class="pure-u-1-2">
                        {{ form_row(form.metadescription) }}
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div id="tabs-2" class="tab">
                    <div class="pure-u-1-2">
                        {{ form_row(form.class) }}
                    </div>
            </div>
        </div>

    <div style="display: none;"><input type="submit" value="Odeslat" /></div>

    <input type="hidden" id="cms_update_url" value="{{ new }}" />

    {{ form_end(form) }}

</div>

<script>
    $( function() {
        $( "#tabs" ).tabs();
    } );
</script>