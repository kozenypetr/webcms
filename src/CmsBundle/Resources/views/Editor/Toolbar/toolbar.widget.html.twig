<div class="widget-toolbar admin-content">

    <span class="widget-plus button" data-widget-id="{{ widget.id }}">
        <i class="fa fa-plus" aria-hidden="true"></i>
    </span>

    <span class="widget-up button" data-widget-id="{{ widget.id }}">
        <i class="fa fa-chevron-up" aria-hidden="true"></i>
    </span>

    <span class="widget-down button" data-widget-id="{{ widget.id }}">
        <i class="fa fa-chevron-down" aria-hidden="true"></i>
    </span>

    <span class="widget-copy button" data-widget-id="{{ widget.id }}">
        <i class="fa fa-copy" aria-hidden="true"></i>
    </span>

    <span class="widget-paste{{ app.request.cookies.get('cms_copy_widget_id')?' active':'' }} button" data-widget-id="{{ widget.id }}">
        <i class="fa fa-paste" aria-hidden="true"></i>
    </span>

    <span class="drag" title="{{ template }}">
        <i class="fa fa-arrows" aria-hidden="true"></i>
        {{ title }}
    </span>
    {#<i class="drag fa fa-arrows" aria-hidden="true"></i>#}
    <a href="{{  path('cms_widget_edit', {'id': widget.id }) }}" class="widget-edit" data-widget-id="{{ widget.id }}">
        <i class="fa fa-pencil-square" aria-hidden="true"></i>
    </a>
    {#
    <a href="" class="widget-copy">
        <i class="fa fa-copy" aria-hidden="true"></i>
    </a>
    #}
    <a href="{{  path('cms_widget_delete', {'id': widget.id }) }}" class="widget-delete" data-widget-id="{{ widget.id }}">
        <i class="fa fa-remove" aria-hidden="true"></i>
    </a>
    {#
    <span class="context-menu" data-widget="{{ widget.id }}">
        <i class="fa fa-bars" aria-hidden="true"></i>
    </span>
    #}
</div>
