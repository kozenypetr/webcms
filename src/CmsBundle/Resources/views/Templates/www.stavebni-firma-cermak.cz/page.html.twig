<!DOCTYPE html>
<html lang="cs">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <title>{% block title %}{% endblock %} | Stavební firma Čermák</title>

        <meta name="keywords" content="{% block metakeywords %}{% endblock %}">
        <meta name="description" content="{% block metadescription %}{% endblock %}">
        <meta name="robots" content="index,follow">

        <!-- Canonical URLs -->
        <link rel="canonical" href="https://www.stavebni-firma-cermak.cz/{{ document.url }}">

        <!-- Open Graph -->
        <meta property="og:site_name" content="Stavební firma Čermák">
        <meta property="og:type" content="website">
        <meta property="og:locale" content="cs_CZ">

        <meta property="og:title" content="{% block ogtitle %}{% endblock %}">
        <meta property="og:image" content="https://www.staveni-firma-cermak.cz/data/vlk/logo_3.png">
        <meta property="og:description" content="{% block ogmetadescription %}{% endblock %}">



        {% block stylesheets %}
            {% stylesheets
                'assets/css/bootstrap.min.css'
                'assets/fonts/font-awesome.min.css'

                'assets/fonts/simple-line-icons.css'
                'assets/fonts/flaticon.css'

                'assets/css/settings.css'

                'assets/css/main.css'
                'assets/css/responsive.css'
                'assets/css/animate.css'
                'assets/css/slicknav.css'
                'assets/css/colors/river.css'
                'assets/slick/slick-theme.css'
                'assets/vendors/fancyBox/dist/jquery.fancybox.css'
                '@CmsBundle/Resources/public/css/main.less'
            %}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body class="document{{ document.id }} {{ cms_body_class() }}">

        <div id="container">
        {% block body %}
        {% endblock body %}
        </div>

        <a href="#" class="back-to-top">
            <i class="fa fa-angle-up"></i>
        </a>

        <div id="loader">
            <div class="square-spin">
                <div></div>
            </div>
        </div>

        {# NEMAZAT- DULEZITE PRO EDITACI STRANKY #}
        {% block cms %}
        {% endblock cms %}

        {% block javascripts %}
            {% javascripts
            'assets/vendors/jquery/dist/jquery.js'
            'assets/vendors/bootstrap/dist/js/bootstrap.js'
            'assets/vendors/fancyBox/dist/jquery.fancybox.js'

            'assets/js/owl.carousel.min.js'
            'assets/js/modernizrr.js'
            'assets/js/nivo-lightbox.min.js'
            'assets/js/jquery.mixitup.min.js'
            'assets/js/jquery.appear.js'
            'assets/js/count-to.js'
            'assets/js/jquery.parallax.js'
            'assets/js/smooth-scroll.js'
            'assets/js/jquery.slicknav.js'
            'assets/jquery-validation/jquery.validate.min.js'
            'assets/jquery-validation/localization/messages_cs.js'

            'assets/js/jquery.themepunch.tools.min.js'

            'assets/js/main.js'

            '@CmsBundle/Resources/public/js/main.js'
            %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
            <script src="assets/js/jquery.themepunch.revolution.min.js"></script>
            <script src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"></script>
        {% endblock %}

    </body>
</html>
