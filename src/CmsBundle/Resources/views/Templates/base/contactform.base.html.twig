<p><strong>Váš dotaz</strong></p>

<table cellpadding="5">
    <tr>
        <td>Jméno a příjmení</td>
        <td>{{ data.name }}</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>{{ data.email }}</td>
    </tr>
    <tr>
        <td>Telefon</td>
        <td>{{ data.phone }}</td>
    </tr>
    <tr>
        <td>Předmět</td>
        <td>{{ data.subject }}</td>
    </tr>
    <tr>
        <td>Dotaz</td>
        <td>{{ data.message | raw }}</td>
    </tr>
    <tr>
        <td>Čas dotazu</td>
        <td>{{ "now"|date("d. m. Y H:i:s") }}</td>
    </tr>
</table>