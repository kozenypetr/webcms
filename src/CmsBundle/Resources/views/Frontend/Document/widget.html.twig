<div id="widget-{{ widget.id }}" data-widget-id="{{ widget.id }}" class="{{ widget.class }}">

    <div class="widget-content">
        {% block widget_content %}
            {{ widget.html | raw }}
        {% endblock %}
    </div>

    <div class="widget-toolbar">
        <span>widget</span>
        <i class="drag fa fa-arrows" aria-hidden="true"></i>
        <a href="{{  path('cms_edit_widget', {'id': widget.id }) }}" class="widget-edit" data-widget-id="{{ widget.id }}">
            <i class="fa fa-pencil-square" aria-hidden="true"></i>
        </a>
        <span class="context-menu" data-widget="{{ widget.id }}">
            <i class="fa fa-bars" aria-hidden="true"></i>
        </span>
    </div>
</div>